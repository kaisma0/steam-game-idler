{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Steam Game Idler",
  "mainBinaryName": "Steam Game Idler",
  "version": "4.0.3",
  "identifier": "com.kaisma0.steam-game-idler",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Copyright Â© 2024-2026 kaisma0",
    "targets": "all",
    "externalBin": [],
    "icon": [
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine"
      }
    },
    "longDescription": "Idle any game in your Steam library",
    "shortDescription": "Steam Game Idler",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [
      "libs/*",
      ".installed"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "createUpdaterArtifacts": "v1Compatible"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJCQTE3NUQwQ0E0NTdEOTMKUldTVGZVWEswSFdoSzNIaHRvdEt4UlZkRVVvOFFvaTloV0crMVlFbVFoLzZtSExTY0FPTEIySEUK",
      "endpoints": [
        "https://raw.githubusercontent.com/kaisma0/steam-game-idler/main/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Steam Game Idler",
        "width": 1440,
        "height": 850,
        "minWidth": 1440,
        "minHeight": 850,
        "fullscreen": false,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "focus": false,
        "visible": false,
        "useHttpsScheme": true
      },
      {
        "title": "Webview Window",
        "label": "webview",
        "url": "/webview.html",
        "width": 1550,
        "height": 800,
        "minWidth": 1550,
        "minHeight": 800,
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "focus": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}